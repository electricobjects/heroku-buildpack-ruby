#!/usr/bin/env ruby

# sync output
$stdout.sync = true

$:.unshift File.expand_path("../../lib", __FILE__)
require "language_pack"
require "language_pack/shell_helpers"

begin
  LanguagePack::Instrument.trace 'compile', 'app.compile' do
    if pack = LanguagePack.detect(ARGV[0], ARGV[1])
      LanguagePack::ShellHelpers.initialize_env(ARGV[2])

      pack.topic("hello lisa")
      system 'echo "im here"'
      #system("echo '#{ARGV[0]}'") #build_dir
      #system("echo '#{ARGV[1]}'") #cache_dir
      #system("echo '#{ARGV[2]}'") #/shrug
      system("rm -f '#{ARGV[1]}'/.bundle")
      system("cp -v -R '#{ARGV[0]}'/.heroku_bundle '#{ARGV[0]}'/.bundle")
      system("sed -i \"s,/app,'#{ARGV[0]}',g\" '#{ARGV[0]}'/.bundle/config")

      pack.topic("Compiling #{pack.name}")
      pack.log("compile") do
        pack.compile
      end
    end
  end
rescue Exception => e
  Kernel.puts " !"
  e.message.split("\n").each do |line|
    Kernel.puts " !     #{line.strip}"
  end
  Kernel.puts " !"
  if e.is_a?(BuildpackError)
    exit 1
  else
    raise e
  end
end
